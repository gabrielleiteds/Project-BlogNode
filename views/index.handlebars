<div class="jumbotron">
  <h1 class="display-4">Bem vindo ao Blog do Node</h1>
  <p class="lead">Essa é uma aplicação desenvolvida em NodeJS(MVC) e MongoDB</p>
  <hr class="my-4">
  <p></p>
  <a class="btn btn-primary btn-lg" href="/usuarios/registro" role="button">Crie uma conta</a>
</div>

<h4>Postagens recentes: </h4>

{{#each postagens}}
<div class="card mt-4">
	<div class="card-body">
		<h3>{{titulo}}</h3>
		<p>{{descricao}}</p>
		<hr>
		<small>Categoria: {{categoria.nome}}</small><br>
		<small>Data de publicação: {{data}}</small><br>
		<a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a><br>

	</div>
</div>
{{else}}
	<p>Nenhuma postagem</p>

{{/each}}