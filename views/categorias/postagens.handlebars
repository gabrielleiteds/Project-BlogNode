<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card mt-4">
	<div class="card-body">
		<h3>{{titulo}}</h3>
		<p>{{descricao}}</p>
		<hr>
		<small>Data de publicação: {{data}}</small><br>
		<a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a><br>

	</div>
</div>
{{else}}
	<p>Nenhuma postagem</p>

{{/each}}